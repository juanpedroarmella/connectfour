{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./build",
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "*": ["src/*"],
      "@classes/*": ["classes/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
